    <script>
        // Aqui você pode adicionar a lógica para atualizar os valores
        function updateOverlay(health, mana, ac) {
            document.getElementById('player-health').innerText = health;
            document.getElementById('player-mana').innerText = mana;
            document.getElementById('player-ac').innerText = ac;
        }

        // Exemplo de como atualizar
        updateOverlay(80, 40, 18);  // Atualiza os valores para 80 de vida, 40 de mana e 18 de AC
    </script>
